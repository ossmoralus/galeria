{
  "name": "galeria-morallus-software",
  "version": "1.0.0",
  "description": "Um projeto educativo desenvolvido por morallus software para pessoas que buscam recursos gratuitos pra seus perfis no GitHub",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "lint:svg": "svgo public/svg --recursive",
    "otimize:svg": "svgo public/svg --recursive",
    "lint:yaml": "node scripts/yaml-lint.mjs",
    "lint:actions": "node scripts/actionlint.mjs",
    "format:yaml": "prettier --write '**/*.{yml,yaml}'",
    "lint:all": "npm run lint && npm run lint:css && npm run lint:yaml && npm run lint:actions && npm run type-check",
    "fix:all": "npm run format && npm run format:yaml && npm run lint:fix && npm run lint:css:fix && npm run otimize:svg",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md,yml,yaml}\"",
    "oraculo": "oraculo",
    "diagnosticar": "oraculo diagnosticar",
    "fix-types": "oraculo fix-types",
    "type-check": "tsc --noEmit",
    "license:audit": "node scripts/license-audit.mjs --format json --output licenses.json",
    "license:report": "node scripts/license-audit.mjs --format text --output LICENSES_SUMMARY.txt",
    "license:full": "npm run license:audit && npm run license:report"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@mux/mux-player-react": "^3.9.2",
    "@next/mdx": "^16.0.7",
    "@types/mdx": "^2.0.13",
    "@vercel/analytics": "^1.6.0",
    "@vercel/speed-insights": "^1.3.1",
    "gray-matter": "^4.0.3",
    "next": "^16.0.7",
    "next-mdx-remote": "^5.0.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "styled-components": "^6.1.19"
  },
  "overrides": {
    "esbuild": "^0.27.1",
    "estree-util-value-to-estree": "^3.3.3",
    "glob": "^11.0.0"
  },
  "devDependencies": {
    "@eslint/markdown": "^7.5.1",
    "@tailwindcss/typography": "^0.5.13",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.7",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-mdx": "^3.6.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "postcss-sorting": "^9.1.0",
    "prettier": "^3.7.3",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "svgo": "^4.0.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.0",
    "yaml-lint": "^1.7.0"
  },
  "engines": {
    "node": "24.x"
  }
}
