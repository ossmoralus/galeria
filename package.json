{
  "name": "galeria-moralus-oss",
  "version": "1.0.0",
  "description": "Um projeto educativo desenvolvido por Moralus OSS para pessoas que buscam recursos gratuitos pra seus perfis no GitHub",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "sep:dev": "echo '--- Development ---'",
    "dev": "next dev",
    "sep:build": "echo '--- Build/Start ---'",
    "build": "next build",
    "start": "next start",
    "sep:test": "echo '--- Tests ---'",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "sep:lint": "echo '--- Lint & Format ---'",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "lint:yaml": "node scripts/yaml-lint.mjs",
    "lint:actions": "node scripts/actionlint.mjs",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md,yml,yaml}\"",
    "format:yaml": "prettier --write '**/*.{yml,yaml}'",
    "lint:all": "npm run lint && npm run lint:css && npm run lint:yaml && npm run lint:actions && npm run type-check",
    "fix:all": "npm run format && npm run format:yaml && npm run lint:fix && npm run lint:css:fix",
    "sep:utils": "echo '--- Utils / Oraculo ---'",
    "oraculo": "oraculo",
    "diagnosticar": "oraculo diagnosticar",
    "formatar": "oraculo formatar --write",
    "fix-types": "oraculo fix-types",
    "otimizar": "oraculo otimizar-svg",
    "reestruturar": "oraculo reestruturar",
    "type-check": "tsc --noEmit",
    "sep:license": "echo '--- License ---'",
    "license:audit": "node scripts/license-audit.mjs --format json --output licenses-audit.json",
    "license:report": "node scripts/license-audit.mjs --format text --output LICENSES_SUMMARY.txt",
    "license:notices": "node scripts/generate-third-party-notices.mjs",
    "license:full": "npm run license:audit && npm run license:report && npm run license:notices"
  },
  "dependencies": {
    "@flags-sdk/statsig": "^0.2.5",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@mux/mux-player-react": "^3.10.2",
    "@next/mdx": "^16.1.1",
    "@tailwindcss/typography": "^0.5.19",
    "@types/mdx": "^2.0.13",
    "@upstash/redis": "^1.36.1",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "autoprefixer": "^10.4.23",
    "flags": "^4.0.2",
    "gray-matter": "^4.0.3",
    "next": "^16.1.1",
    "next-mdx-remote": "^5.0.0",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "styled-components": "^6.2.0",
    "tailwindcss": "^3.4.14"
  },
  "overrides": {
    "esbuild": "^0.27.1",
    "estree-util-value-to-estree": "^3.3.3",
    "glob": "^11.0.0"
  },
  "devDependencies": {
    "@eslint/markdown": "^7.5.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-mdx": "^3.6.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "postcss-sorting": "^9.1.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.1",
    "svgo": "^4.0.0",
    "typescript": "^5.9.3",
    "yaml-lint": "^1.7.0"
  }
}
